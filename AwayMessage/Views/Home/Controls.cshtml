@section scripts{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script type="text/javascript" src="~/js/flipclock.min.js"></script>
    <script type="text/javascript" src="~/js/beback-admin.js"></script>

}

<h1>Controls</h1>
<hr />
    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Timer</h2>
                <button id="btn15" type="button" class="btn btn-dark">15 Minutes</button>
                <button id="btn30" type="button" class="btn btn-dark">30 Minutes</button>
                <button id="btn60" type="button" class="btn btn-dark">60 Minutes</button>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <div class="input-group mb-3">
                  <input id="txtCustom" type="number" class="form-control" placeholder="seconds" aria-label="Custom time in seconds" aria-describedby="btnCustom"/>
                  <button class="btn btn-outline-secondary" type="button" id="btnCustom">Custom Time</button>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
        <hr />
        <h3>Text/HTML</h3><br />
        <div class="mb-3 row">
            <label for="txtTitle" class="col-sm-1 col-form-label">Title</label>
            <div class="col-sm-11">
                <textarea id="txtTitle" class="form-control" placeholder="Title"></textarea>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="txtSubtitle" class="col-sm-1 col-form-label">Subtitle</label>
            <div class="col-sm-11">
                <textarea id="txtSubtitle" class="form-control" placeholder="SubTitle"></textarea>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="txtMessage" class="col-sm-1 col-form-label">Message</label>
            <div class="col-sm-11">
                <textarea id="txtMessage" class="form-control" placeholder="Message"></textarea>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-sm-6 col-form-label"></div>
            <div class="col-sm-3">
                <button id="btnPageReload" type="button" class="btn btn-danger form-control">Erase screen</button>
            </div>
            <div class="col-sm-3">
                <button id="btnSubmit" type="button" class="btn btn-primary form-control">Submit</button>
            </div>
        </div>
    </div>


